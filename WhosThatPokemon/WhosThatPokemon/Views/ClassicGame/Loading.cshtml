@{
    ViewData["Title"] = "Loading Pokédex...";
    Layout = null; 
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loading Resources...</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #add8e6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            color: #003a70;
        }

        .loader-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .pokeball-spinner {
            width: 80px;
            height: 80px;
            background-image: url('https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/items/poke-ball.png');
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            animation: spin 1.5s linear infinite;
            margin: 0 auto 20px auto;
        }

        h2 { margin-bottom: 10px; }
        p { font-size: 1.1em; max-width: 400px; line-height: 1.5; }

        @@keyframes spin {
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="loader-container">
        <div class="pokeball-spinner"></div>
        <h2>Game Loading...</h2>
        <p>We are downloading information for 1025 Pokémon from the API...</p>
        <p id="status-text" style="font-size: 0.9em; color: #666;">Please wait, this only happens when starting the server.</p>
    </div>

    <script>
        function checkGameStatus() {
            fetch('@Url.Action("CheckStatus", "ClassicGame")')
                .then(response => response.json())
                .then(data => {
                    if (data.ready) {
                        window.location.href = '@Url.Action("Index", "ClassicGame")';
                    }
                })
                .catch(error => console.log("Waiting...", error));
        }

        setInterval(checkGameStatus, 2000);
    </script>
</body>
</html>