@{
    ViewData["Title"] = "Games";
}

<partial name="_LogoutBall" />

<div class="title-container">
    <h1 class="pokemon-title hollow">
        <span>Who's That</span>
        <span>Pokémon?</span>
    </h1>
    <h1 class="pokemon-title solid">
        <span>Who's That</span>
        <span>Pokémon?</span>
    </h1>
</div>

<div class="button-container">
    <a asp-controller="ClassicGame" asp-action="Index" class="classic-button">CLASSIC</a>
    <a asp-controller="PokedexGame" asp-action="Index" class="pokedex-button">POKEDEX</a>
    <a asp-controller="ZoomGame" asp-action="Index" class="zoom-button"> ㅤZOOM­­ㅤ</a>
</div>

<style>
    /* style para Games */
    body {
        background-image: url('../images/Games.png');
        background-size: cover;
        background-position: center;
        justify-content: flex-start;
        padding-top: 5vh;
    }

    .button-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        margin-top: 14rem;
    }

    .classic-button, .pokedex-button, .zoom-button {
        padding: 18px 60px;
        font-size: 32px;
        font-family: 'Arial Black', Gadget, sans-serif;
        font-weight: 900;
        color: white;
        background-color: #2f63d3;
        border: 3px solid #162c68;
        border-radius: 50px;
        cursor: pointer;
        text-decoration: none;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
        transition: all 0.2s ease-in-out;
        margin-bottom: 0;
    }

    .classic-button:hover, .pokedex-button:hover, .zoom-button:hover {
        background-color: #4b1cb7;
        transform: translateY(-4px);
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.4);
    }

    .title-container {
        padding-top: 1vh;
    }
</style>