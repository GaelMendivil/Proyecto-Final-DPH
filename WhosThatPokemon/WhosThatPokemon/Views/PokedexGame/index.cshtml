@model dynamic

@{
    ViewData["Title"] = "Pokedex Game";
    bool isGameOver = ViewBag.IsGameOver == true;
}

<a asp-controller="Games" asp-action="Index" class="back-button" title="Back to Games" aria-label="Back to Games">
    &#8592;
</a>

<partial name="_LogoutBall" />

<style>

    .title-container {
        position: relative;
        text-align: center;
        padding-top: 12vh;
        width: 100%;
        height: 25vh;
    }

    .pokemon-title {
        font-weight: normal;
        margin: 0;
        position: absolute;
        width: 100%;
        top: 100%;
        left: 73%;
        transform: translate(-50%, -50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        line-height: 0.9;
    }

    .pokemon-title.hollow {
        font-family: 'Pokemon Hollow', sans-serif;
        color: #2a75bb;
        -webkit-text-stroke: 15px #003a70;
        text-shadow: 3px 0 0 #003a70, -3px 0 0 #003a70, 0 3px 0 #003a70, 0 -3px 0 #003a70,
            2px 2px 0 #003a70, -2px -2px 0 #003a70, 2px -2px 0 #003a70, -2px 2px 0 #003a70;
        font-size: 7vw;
    }

    .pokemon-title.solid {
        font-family: 'Pokemon Solid', sans-serif;
        color: #FFCB05;
        font-size: 7vw;
    }

    .back-button {
        position: fixed;
        top: 12px;
        left: 12px;
        z-index: 1400;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        height: 44px;
        border-radius: 10px;
        background: linear-gradient(180deg,#1d5fe0,#124aa8);
        color: #fff;
        text-decoration: none;
        font-size: 26px;
        font-weight: 800;
        border: 3px solid rgba(10,40,120,0.9);
        box-shadow: 0 6px 14px rgba(10,40,120,0.28);
        transition: transform .12s ease, box-shadow .12s ease;
    }

    .back-button:hover,
    .back-button:focus {
        transform: translateY(-2px) scale(1.02);
        box-shadow: 0 8px 18px rgba(10,40,120,0.36);
    }

    body {
        background-color: #add8e6;
        background-image: url('/images/PokedexBG.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: flex-start; 
        font-family: Arial, sans-serif;
        gap: 30px;
        flex-wrap: wrap;
        padding-bottom: 50px;
    }

    .box {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 25px;
        border-radius: 20px;
        text-align: center;
    }

    .box.description-box {
        width: 460px;
        margin-top: 80px; 
        margin-left: -55px;
        font-size: 20px;
        background-color: transparent;
        
        min-height: 250px; 
        display: flex; 
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .box.guess-box {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 360px;
        margin-top: 83px; 
        margin-left: 250px;
        padding: 0;
        background-color: transparent;
    }

    .title-panel {
        width: 100%;
        min-height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: transparent; 
        border: none;
        margin-bottom: 15px;
    }

    .title-panel h2 {
        margin: 0;
        color: white;
        font-weight: 700;
    }

    .right-panel {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .description-box h2,
    .guess-box h2 {
        margin-bottom: 15px;
    }

    .description {
        font-style: italic;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .clue-text {
        font-weight: bold;
        margin-top: 10px;
        color: #003a70;
    }

    .message {
        font-weight: bold;
        margin-top: 15px;
        margin-bottom: 10px;
        color: #f04e30;
        font-size: 1.1em;
    }

    .pokemon-sprite {
        position: relative; 
        margin-top: 15px;
        margin-bottom: 10px;
        width: 100%;
        text-align: center;
    }

    .pokemon-sprite img {
        max-width: 150px;
        display: block;
        margin: 0 auto;
    }

    .autocomplete-container {
        position: relative;
        width: 80%; 
        margin-bottom: 15px; 
    }

    .guess-box input[type="text"] {
        padding: 10px;
        width: 100%;
        border-radius: 10px;
        border: 1px solid #ccc;
        box-sizing: border-box; 
        margin-bottom: 0;
    }

    .guess-box input[type="text"]:disabled {
        background-color: #e0e0e0;
        color: #888;
        cursor: not-allowed;
    }

    .autocomplete-items {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 5000;
        border: 1px solid #999;
        background-color: #fff;
        max-height: 250px;
        overflow-y: auto;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        text-align: left;
    }

    .autocomplete-items div {
        padding: 8px 10px;
        cursor: pointer;
        background-color: #fff;
        border-bottom: 1px solid #d4d4d4;
        display: flex;
        align-items: center;
    }

    .autocomplete-items div:hover {
        background-color: #e9e9e9;
    }

    .autocomplete-active {
        background-color: #1d5fe0 !important;
        color: #ffffff !important;
    }
    
    .autocomplete-sprite {
        width: 40px; 
        height: 40px; 
        object-fit: contain; 
        image-rendering: pixelated;
        margin-right: 10px;
    }

    .guess-box button {
        padding: 10px 20px;
        border-radius: 10px;
        border: none;
        background-color: #f04e30;
        color: white;
        font-weight: bold;
        cursor: pointer;
        width: 80%;
        display: block; 
    }

    .guess-box button:hover {
        background-color: #d03d25;
    }

    .guess-box button:disabled {
        background-color: #95a5a6;
        cursor: not-allowed;
    }
    .guess-box button:disabled:hover {
        background-color: #95a5a6;
    }

    .attempts {
        margin-top: 15px;
        font-weight: bold;
    }
    
    .new-game-btn {
        margin-top: 10px;
        background-color: #2980b9 !important;
    }
    .new-game-btn:hover {
        background-color: #1c6ea4 !important;
    }
</style>

<div class="title-container">
    <h1 class="pokemon-title hollow">
        <span>Who's That</span>
        <span>Pokémon?</span>
    </h1>
    <h1 class="pokemon-title solid">
        <span>Who's That</span>
        <span>Pokémon?</span>
    </h1>
</div>

<div class="box description-box">
    <h2>Description and Clues</h2>

    @if(ViewBag.Description != null)
    {
        <div class="description">"@ViewBag.Description"</div>
    }

    @if(ViewBag.ShowId == true)
    {
        <div class="clue-text">Pokedex No: @ViewBag.PokedexId</div>
    }

    @if(ViewBag.ShowType == true && ViewBag.Type != null)
    {
        <div class="clue-text">Type: @ViewBag.Type</div>
    }
    
    @if(ViewBag.Message != null)
    {
        <div class="message">@ViewBag.Message</div>
    }

    @if(ViewBag.Sprite != null)
    {
        <div class="pokemon-sprite">
            <img src="@ViewBag.Sprite" alt="Pokemon Sprite" />
        </div>
    }

    <div class="attempts">
        Attempts: @ViewBag.Attempts / 6
    </div>
</div>

<div class="box guess-box">
    <div class="title-panel">
        <h2>Guess the Pokémon</h2>
    </div>

    <div class="right-panel">
        <form asp-action="Guess" asp-controller="PokedexGame" method="post" style="width:100%; display:flex; flex-direction:column; align-items:center;">
            
            <div class="autocomplete-container" data-url="@Url.Action("SearchPokemon", "PokedexGame")">
                <input type="text" 
                       name="guess" 
                       id="guessBox" 
                       placeholder="Insert a name..." 
                       autocomplete="off" 
                       required 
                       @(isGameOver ? "disabled" : "") />
                <div id="autocomplete-list" class="autocomplete-items"></div>
            </div>

            <button type="submit" @(isGameOver ? "disabled" : "")>Guess</button>
        </form>
        
        <form asp-action="Index" asp-controller="PokedexGame" method="get" style="width:100%; display:flex; justify-content:center;">
             <button type="submit" class="new-game-btn">New Pokémon</button>
        </form>
    </div>
</div>

<script src="~/js/pokemon-autocomplete.js"></script>

@if (!isGameOver)
{
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            setupPokemonAutocomplete("guessBox", "autocomplete-list", "autocomplete-container");
        });
    </script>
}